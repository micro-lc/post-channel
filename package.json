{
  "name": "@micro-lc/post-channel",
  "version": "0.2.0",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "start": "vite",
    "test": "mocha \"src/**/*.test.ts\"",
    "test:e2e": "yarn playwright test",
    "coverage": "c8 mocha \"src/**/*.test.ts\"",
    "check:types": "tsc --noEmit",
    "lint": "eslint .",
    "dep-version": "node --no-warnings --loader=ts-node/esm ./scripts/dep-version.ts",
    "build:lib": "node --no-warnings --loader=ts-node/esm scripts/build.ts",
    "build:types": "tsc --project scripts/tsconfig.json",
    "build": "run-p 'build:lib' 'build:types'",
    "bump": "node --no-warnings --loader=ts-node/esm scripts/version.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.0.2",
    "c8": "^10.1.2",
    "commander": "^12.1.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^9.6.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "=5.1.0-beta-04b058868c-20240508",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "globals": "^15.7.0",
    "mocha": "^10.6.0",
    "node-color-log": "^12.0.1",
    "npm-run-all": "^4.1.5",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.14.1",
    "vite": "^5.3.5"
  },
  "peerDependencies": {
    "rxjs": "^7"
  },
  "packageManager": "yarn@4.3.1"
}
