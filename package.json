{
  "name": "postchannel",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "start": "vite",
    "test": "mocha \"src/**/*.test.ts\"",
    "test:e2e": "yarn playwright test",
    "coverage": "c8 mocha \"src/**/*.test.ts\"",
    "check:types": "tsc --noEmit",
    "build:lib": "node --no-warnings --loader=ts-node/esm scripts/build.ts",
    "build:types": "tsc --project scripts/tsconfig.json",
    "build": "run-p 'build:lib' 'build:types'",
    "bump": "node --no-warnings --loader=ts-node/esm scripts/version.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "c8": "^10.1.2",
    "commander": "^12.1.0",
    "mocha": "^10.6.0",
    "node-color-log": "^12.0.1",
    "npm-run-all": "^4.1.5",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "peerDependencies": {
    "rxjs": "^7"
  },
  "packageManager": "yarn@4.3.1"
}
